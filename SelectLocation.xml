<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystem Windows="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tenali"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#24204D"
        android:text="Tenali"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintstart_toStartOf="parent" />

<Button
        android:id="@+id/guntur"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginstart="54dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="50dp" 
        android:backgroundTint="#24204D"
        android:text="Guntur"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tenali"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintstart_tostartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vijayawada" />

<Button
        android:id="@+id/xijayawada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp" 
        android:layout_marginTop="50dp"
        android:layout_marginEnd= " 54dp"
        android:backgroundTint="#24204D"
        android:text="Vijayawada"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

<ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp" 
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintstart_tostartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_25517163954_1" />

<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="60dp"
        android:text="Select the route Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintstart_tostartO ="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraint.layout.widget.ConstraintLayout>
